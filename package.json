{
  "name": "mgl-store",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "start": "turbo start",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "test": "turbo test",
    "format": "prettier --write \"**/*.{ts,tsx,js,mjs,json,yaml,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,mjs,json,yaml,css,md}\"",
    "clean": "turbo clean && find . -name 'node_modules' -not -path '*/.git/*' -prune -exec rm -rf {} +",
    "db:generate": "turbo db:generate",
    "db:migrate": "turbo db:migrate",
    "dev:web": "turbo dev --filter=@mgl/web",
    "dev:admin": "turbo dev --filter=@mgl/admin",
    "dev:api": "turbo dev --filter=@mgl/api",
    "build:web": "turbo build --filter=@mgl/web...",
    "build:admin": "turbo build --filter=@mgl/admin...",
    "build:api": "turbo build --filter=@mgl/api..."
  },
  "devDependencies": {
    "prettier": "^3.3.3",
    "turbo": "^2.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}